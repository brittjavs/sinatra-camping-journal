<section class="title-row">
  <div class="title-container">
    <h1> <%= current_user.username %>'s Journal</h1>
  </div>
</section>

<main class="index-page">
  <div class="search-bar-container">
    <form class="searchbar" method="GET" action="/trips">
    <input type="text" name="query">
    <input type="submit" value="Search">
    </form>
  </div>
  <div class="entries-container">
    <h3> Journal Entries </h3>
    <ul>
      <%@trips.each do |trip|%>
      <li>
      <h4> <%=trip.date_camped%> </h4>
      PARK: <%=trip.park%> CAMPGROUND: <%=trip.campground%><br>
      NOTES: <%=trip.notes%><br>
      <a href="/trips/<%=trip.id%>">View</a>  |  
      <a href="/trips/<%=trip.id%>/edit">Edit</a>
      </li><br>
      <%end%>
    </ul>
  </div>
  <div class="bucket-list-container">
    <h3> Camping Bucket List</h3>
    <ul>
      <%@bucketlist.each do |item|%>
      <li>
      <%=item.park%> - <%=item.campground%>
      <br>
      <a href="/trips/<%=item.id%>/edit">Edit</a>

      </li>
      <%end%>
    </ul>
  </div>
</main>